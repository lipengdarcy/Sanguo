	public void logWarn(Throwable obj){
		Logger log = this.getLog(Log.WARN).logger;
		log.error("-------warn start------");
		log.error(obj.toString());
		for(StackTraceElement e: obj.getStackTrace()){
			log.warn(e.toString());
		}
		log.error("-------warn end------");
	}

