<?xml version='1.0' encoding='UTF-8'?>
<config>
	<!--策划配置数据位置-->
	<resourcedir>D:\SGB_Server\server\data</resourcedir>
	
	<!--服务器名，可任意设定，最多6个汉字，英文名字请先测试能够完整展示-->
	<name>三国吧兄弟</name>
	
	<!--服务器ID，全局唯一。由于合服等需要，目前只支持1~999，请节约使用 -->
	<id>1</id>
	
	<!--服务器区号，可随意设定。惯例是按照开服顺序1、2、3.... 一组服务器可以配置多个区号(英文逗号分隔)，合服后专用-->
	<numbers>1</numbers>
	
	<!--本游戏服务器对外IP地址-->
	<serverip>127.0.0.1</serverip>
	<!--本游戏服务器对外端口-->
	<serverport>12018</serverport>
	
	
	<gates>
		<!--网关服务器ip地址、端口号。服务器可以配置多个网关，即一个服务器同时出现在多个网关的服务器列表上-->
		<gate ip="127.0.0.1" port="12001"/>
		<!--gate ip="192.168.1.3" port="12001"/-->
	</gates>
	
	<!--GM服务器IP地址-->
	<gmip>127.0.0.1</gmip>
	<!--GM服务器端口-->
	<gmport>12088</gmport>
	<!--GM心跳URL-->
	<gmheart>http://192.168.1.3:8081/sangogm</gmheart>
	
	<!-- billing地址 -->
	<billing>http://192.168.1.3:8081/billing</billing>
	
	<!--开启推送充值模式，目前仅台湾版官网充值使用  1：开启  0：关闭-->
	<pushpay>0</pushpay>
	
	<!--值为true，测试模式开启，玩家可以使用GM指令等功能。正式服请务必设置为false-->
	<test>true</test>
	
	<defaultChannel>APP_STORE</defaultChannel>
	<montRMB>18</montRMB>
	<chargeRate>10</chargeRate>
	<monthCard>1001</monthCard>
	
</config>